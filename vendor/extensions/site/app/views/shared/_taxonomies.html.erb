<div id="taxonomies" class="span-24">
	<ul class="dropdown">
		<% get_taxonomies.each do |taxonomy| %>
  
		  	<li <%= 'class="master"' if taxonomy.root.children.size > 0 %>>
			     <% if taxonomy.root.children.size > 0 %>
			    	<%= link_to t("shop_by_taxonomy", :taxonomy => taxonomy.name.singularize), seo_url(taxonomy.root), :class => 'root' %>
			
					<ul class="sub_menu">
						 <% taxonomy.root.children.each do |taxon| %>
						    <li<%= ' class="current"' if @taxon and ([@taxon] + @taxon.ancestors).include?(taxon) %>><%= link_to taxon.name, seo_url(taxon) %></li>
						  <% end %>
					</ul>
			     <% else %>
					<%= link_to t("shop_by_taxonomy", :taxonomy => taxonomy.name.singularize), seo_url(taxonomy.root), :class => 'root' %>
				 <% end %>
			 </li>
 
		<% end %>
	</ul>
</div>
